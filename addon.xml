<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.drakodi"
       name="Drakodi Wizard"
       version="1.0.0"
       provider-name="Drakodi Devs">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Drakodi Wizard</summary>
        <description>Installs builds, add-ons, and configs for Drakodi setup</description>
        <platform>all</platform>
    </extension>
</addon>
